import sqlite3

# Connect to your database
conn = sqlite3.connect("users.db")
cursor = conn.cursor()

try:
    # Add int_prac column if not exists
    cursor.execute("PRAGMA table_info(teacher_course)")
    columns = [col[1] for col in cursor.fetchall()]
    
    if "int_prac" not in columns:
        cursor.execute("ALTER TABLE teacher_course ADD COLUMN int_prac TEXT DEFAULT NULL")
        print("✅ Column int_prac added.")
    else:
        print("ℹ️ Column int_prac already exists.")

    # Add ext_prac column if not exists
    cursor.execute("PRAGMA table_info(teacher_course)")
    columns = [col[1] for col in cursor.fetchall()]
    
    if "ext_prac" not in columns:
        cursor.execute("ALTER TABLE teacher_course ADD COLUMN ext_prac TEXT DEFAULT NULL")
        print("✅ Column ext_prac added.")
    else:
        print("ℹ️ Column ext_prac already exists.")

    conn.commit()
except Exception as e:
    print("❌ Error:", e)
finally:
    conn.close()
